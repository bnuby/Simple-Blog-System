{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "~decorators/*": ["src/decorators/*"],
      "~components/*": ["src/components/*"],
      "~filters/*": ["src/filters/*"],
      "~guards/*": ["src/guards/*"],
      "~helpers/*": ["src/helpers/*"],
      "~pipes/*": ["src/pipes/*"],
      "~types/*": ["src/types/*"],
      "~src/*": ["src/*"],
    }
  }
}
